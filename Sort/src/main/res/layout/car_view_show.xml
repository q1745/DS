<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/showpping_show_view_check"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </CheckBox>
        <ImageView
            android:id="@+id/car_view_image"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </ImageView>
    <ImageView
        android:id="@+id/showpping_show_view_add"
        android:src="@drawable/add"
        android:layout_width="50dp"
        android:layout_height="50dp"></ImageView>
    <TextView
        android:id="@+id/showpping_show_view_number"
        android:gravity="center"
        android:layout_weight="2"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <ImageView
        android:id="@+id/showpping_show_view_reduce"
        android:layout_weight="1"
        android:src="@drawable/reduce"
        android:layout_width="50dp"
        android:layout_height="50dp"></ImageView>
</LinearLayout>