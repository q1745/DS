<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_11"
        android:background="@color/theme">

        <ImageView
            android:id="@+id/login_act_goback"
            android:layout_width="@dimen/margin_8"
            android:layout_height="@dimen/margin_8"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_2"
            android:src="@mipmap/goback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_24" />

        <TextView
            android:id="@+id/login_text_toReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_2"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="@dimen/margin_300"
        android:layout_height="113dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_100"
        android:background="@drawable/coner_bolder" >

        <EditText
            android:hint="请输入手机号"
            android:layout_alignParentTop="true"
            android:id="@+id/login_edit_username"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_11"/>
        <View
            android:layout_centerVertical="true"
            android:background="@color/boldercolor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <EditText
            android:hint="请输入密码"
            android:layout_alignParentBottom="true"
            android:id="@+id/login_edit_password"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_11"/>
    </RelativeLayout>
    
    <Button
        android:text="登录"
        android:textSize="@dimen/text_size_24"
        android:id="@+id/login_btn_login"
        android:layout_marginTop="@dimen/margin_240"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/margen_320"
        android:layout_height="@dimen/margin_11"/>
</RelativeLayout>